    "version": "0.2.0",
    "configurations": [


        {
            "name": "make offer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/ratchet",
            "args":["offer", "bob@sour.is", "--key", "../../alice.key", "--state", "../../tmp"]
        }, 

        {
            "name": "receive offer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/ratchet",
            "args":["recv", "--key", "../../bob.key", "--state", "../../tmp", "--msg", "../../offer.msg"]
        },

 
        {
            "name": "receive ack",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/ratchet",
            "args":["recv", "--key", "../../alice.key", "--state", "../../tmp", "--msg", "../../ack.msg"]
        },

        {
            "name": "chat",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/ratchet",
            "args":["--them", "bob@sour.is", "--key", "../../alice.key", "--state", "../../tmp", "chat"]
        },

        {
            "name": "bob recv msg",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/ratchet",
            "args":["--key", "../../bob.key", "--state", "../../tmp", "--msg", "../../send1.msg", "recv"]
        },

        {
            "name": "bob send msg",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/ratchet",
            "args":["--key", "../../bob.key", "--state", "../../tmp", "--msg", "../../send1.msg", "send", "alice@sour.is"]
        }

    ]
}