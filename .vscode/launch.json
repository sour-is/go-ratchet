    "version": "0.2.0",
    "configurations": [
        {
            "name": "make offer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/ratchet",
            "args":["offer", "--me", "alice@sour.is", "--them", "bob@sour.is", "--key", "../../alice.key", "--state", "../../tmp"]
        }, 

        {
            "name": "receive offer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/ratchet",
            "args":["recv", "--them", "alice@sour.is", "--me", "bob@sour.is", "--key", "../../bob.key", "--state", "../../tmp", "--msg", "../../offer.msg"]
        },

 
        {
            "name": "receive ack",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/ratchet",
            "args":["recv", "--me", "alice@sour.is", "--them", "bob@sour.is", "--key", "../../alice.key", "--state", "../../tmp", "--msg", "../../ack.msg"]
        },

        {
            "name": "chat",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/ratchet",
            "args":["--me", "alice@sour.is", "--them", "bob@sour.is", "--key", "../../alice.key", "--state", "../../tmp", "chat"]
        }

    ]
}